; Polybar Config
; vim:ft=dosini

[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color8}
foreground = ${xrdb:foreground}
foreground-alt = #fff
primary = ${xrdb:cursorColor}
secondary = ${xrdb:color14}
alert = #bd2c40

[bar/main]
monitor = ${env:PRIMARY}
width = 100%
height = 27
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Arimo Nerd Font:pixelsize=11;2:antialias=true"
font-1 = "Font Awesome 5 Free:style=solid:size=10;3"

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

modules-left = arch i3 mpd
modules-center = xwindow
modules-right = pulseaudio-control cpu temperature memory storage wlan battery backlight-acpi date

tray-position = right
tray-detached = false
tray-padding = 2
; tray-transparent = false
tray-background = ${colors.background}

cursor-click = pointer
cursor-scroll = ns-resize

[bar/secondary]
inherit = bar/main
monitor = ${env:MONITOR}
modules-center = xwindow
modules-right =
tray-position = none

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
format-underline = ${xrdb:red}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%

label-focused-background = ${xrdb:cyan-dark}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-separator = |

ws-icon-7 = 8;


[module/mpd]
type = custom/script
exec = playerctl --player=spotify metadata -f "{{ artist }} - {{ title }}"
format-prefix =   
;format-underline = ${xrdb:green}
click-left = playerctl --player=spotify previous
click-middle = playerctl --player=spotify play-pause
click-right = playerctl --player=spotify next
margin-left = 3

[module/xbacklight]
;Muestra el brillo de la pantalla. Solo para laptops
type = internal/xbacklight

 format = <label> <bar>
 label = BL

  bar-width = 10
  bar-indicator = |
  bar-indicator-foreground = #fff
  bar-indicator-font = 2
  bar-fill = ─
  bar-fill-font = 2
  bar-fill-foreground = #9f78e1
  bar-empty = ─
  bar-empty-font = 2
  bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/pulseaudio-control]
type = custom/script
tail = true
format-underline = ${xrdb:cyan}
label-padding = 2
label-foreground = ${colors.foreground}

# Icons mixed from Font Awesome 5 and Material Icons
# You can copy-paste your options for each possible action, which is more
# trouble-free but repetitive, or apply only the relevant ones (for example
# --sink-blacklist is only needed for next-sink).
exec = pulseaudio-control --icons-volume " , " --icon-muted " " --sink-nicknames-from "device.description" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp__sink: Speakers" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp_3__sink:Headphones" listen
click-right = exec pavucontrol &
click-left = pulseaudio-control togmute
click-middle = pulseaudio-control --sink-blacklist "alsa_output.pci-0000_01_00.1.hdmi-stereo-extra2" next-sink
scroll-up = pulseaudio-control --volume-max 130 up
scroll-down = pulseaudio-control --volume-max 130 down

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = %{F#81A1C1}%{F-}
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${xrdb:color6}
label = " %percentage:2%%"

[module/memory]
type = internal/memory
interval = 2
format-prefix = %{F#A3BE8C}%{F-}
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${xrdb:color2}
label = " %gb_used%"

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0

format-connected-underline = ${xrdb:color3}
format-connected-prefix =  
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %essid%

format-disconnected-prefix = 
format-disconnected-prefix-foreground = ${xrdb:red}

[module/storage]
type = custom/script
interval = 5
format-prefix = %{F#B48EAD}%{F-}
format-underline = ${xrdb:color4}
exec = ~/.config/polybar/scripts/storage.sh
label = " %output%"

[module/temperature]
type = internal/temperature
interval = 2
thermal-zone = 2
warn-temperature = 60

format = <label>
format-prefix = %{F#D08770}%{F-}
format-underline = ${xrdb:color1}
label = " %temperature-c%"

[module/openvpn]
type = custom/script
interval = 5
format-prefix = %{F#D08770}ﱾ%{F-}
format-underline = ${xrdb:color4}
exec = ~/.config/polybar/scripts/openvpn.sh
label = " %output%"

[module/date]
type = internal/date
interval = 2

date = "%H:%M"
date-alt = " %d-%m-%Y"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = %{F#8FBCBB}%{F-}
;format-underline = ${xrdb:color9}
label = " %date%"

[module/battery]
type = internal/battery
format-discharging = <ramp-capacity>   <label-discharging>
format-charging =  <animation-charging>   <label-charging>
full-at = 99
battery = BAT0
adapter = AC
poll-interval = 5
format-charging-underline = ${xrdb:green}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

ramp-capacity-0-foreground = ${xrdb:red}
ramp-capacity-1-foreground = ${xrdb:red}
ramp-capacity-foreground = ${xrdb:orange}
ramp-capacity-4-foreground = ${xrdb:green}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${xrdb:green}

[settings]
screenchange-reload = true

[module/arch]
type = custom/text
content = 
;alt-icon = 
content-padding = 2
content-background = ${color.acolor}
content-foreground = ${color.fg}
click-left = rofi -show run
click-middle = rofi -show ssh
click-right = echo poweroff reboot exit | xargs -n 1 | rofi -dmenu | bash
